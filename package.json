{
    "name": "vibekit-workspace",
    "private": true,
    "type": "module",
    "version": "1.0.0",
    "packageManager": "npm@10.9.2",
    "bin": {
        "vibekit": "./packages/cli/dist/cli.js"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "build:packages": "turbo run build --filter='./packages/*'",
        "dev": "turbo run dev",
        "dev:dashboard": "turbo run dev --filter=vibekit-dashboard",
        "type-check": "turbo run type-check",
        "test": "turbo run test",
        "lint": "turbo run lint",
        "clean": "turbo run clean"
    },
    "devDependencies": {
        "@types/node": "^22.15.18",
        "@vitest/coverage-v8": "^3.1.3",
        "autoprefixer": "^10.4.21",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.11",
        "tailwindcss-animate": "^1.0.7",
        "tsup": "^8.4.0",
        "turbo": "^2.5.5",
        "typescript": "^5.8.3",
        "vitest": "^3.1.3"
    },
    "dependencies": {
        "dotenv": "^17.2.0"
    }
}
