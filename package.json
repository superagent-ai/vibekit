{
    "name": "vibekit-workspace",
    "private": true,
    "type": "module",
    "version": "1.0.0",
    "packageManager": "npm@10.9.2",
    "bin": {
        "vibekit": "./packages/cli/dist/cli.js"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "build:packages": "turbo run build --filter='./packages/*'",
        "dev": "turbo run dev",
        "dev:dashboard": "turbo run dev --filter=@vibe-kit/dashboard",
        "type-check": "turbo run type-check",
        "test": "turbo run test",
        "test:unit": "turbo run test --filter=@vibe-kit/ai-chat --filter=@vibe-kit/mcp-client --filter=@vibe-kit/mcp-server --filter=@vibe-kit/taskmaster --filter=@vibe-kit/projects --filter=@vibe-kit/dagger --filter=vibekit",
        "test:integration": "vitest run -c vitest.integration.config.ts",
        "test:ai-chat": "turbo run test --filter=@vibe-kit/ai-chat",
        "test:logger": "turbo run test --filter=@vibe-kit/logger",
        "test:mcp-client": "turbo run test --filter=@vibe-kit/mcp-client",
        "test:mcp-server": "turbo run test --filter=@vibe-kit/mcp-server",
        "test:projects": "turbo run test --filter=@vibe-kit/projects",
        "test:taskmaster": "turbo run test --filter=@vibe-kit/taskmaster",
        "test:dagger": "turbo run test --filter=@vibe-kit/dagger",
        "test:coverage": "turbo run test:coverage --filter=@vibe-kit/mcp-server --filter=@vibe-kit/taskmaster --filter=@vibe-kit/projects --concurrency=1",
        "test:coverage:all": "turbo run test:coverage --filter=@vibe-kit/ai-chat --filter=@vibe-kit/mcp-client --filter=@vibe-kit/mcp-server --filter=@vibe-kit/taskmaster --filter=@vibe-kit/projects --filter=@vibe-kit/dagger --filter=vibekit --continue",
        "test:coverage:quiet": "turbo run test:coverage --filter=@vibe-kit/mcp-server --filter=@vibe-kit/taskmaster --filter=@vibe-kit/projects --output-logs=errors-only",
        "lint": "turbo run lint",
        "clean": "turbo run clean"
    },
    "devDependencies": {
        "@types/node": "^22.15.18",
        "@vitest/coverage-v8": "^3.1.3",
        "@vitest/ui": "^3.1.3",
        "autoprefixer": "^10.4.21",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.11",
        "tailwindcss-animate": "^1.0.7",
        "tsup": "^8.4.0",
        "turbo": "^2.5.5",
        "typescript": "^5.8.3",
        "vitest": "^3.1.3"
    },
    "dependencies": {
        "dotenv": "^17.2.0",
        "eventsource-parser": "^3.0.5",
        "nanoid": "^5.1.5"
    },
    "overrides": {
        "protobufjs": "^7.5.3",
        "prismjs": "^1.30.0",
        "esbuild": "^0.25.0"
    }
}
