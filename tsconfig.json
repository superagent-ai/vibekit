{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler", 
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vibe-kit/logger": ["packages/logger/src/index.ts", "packages/logger/dist/index.d.ts"],
      "@vibe-kit/logger/*": ["packages/logger/src/*", "packages/logger/dist/*"],
      "@vibe-kit/projects": ["packages/projects/src/index.ts", "packages/projects/dist/index.d.ts"],
      "@vibe-kit/projects/*": ["packages/projects/src/*", "packages/projects/dist/*"],
      "@vibe-kit/mcp-client": ["packages/mcp-client/src/index.ts", "packages/mcp-client/dist/index.d.ts"],
      "@vibe-kit/mcp-client/*": ["packages/mcp-client/src/*", "packages/mcp-client/dist/*"],
      "@vibe-kit/taskmaster": ["packages/taskmaster/src/index.ts", "packages/taskmaster/dist/index.d.ts"],
      "@vibe-kit/taskmaster/*": ["packages/taskmaster/src/*", "packages/taskmaster/dist/*"],
      "@vibe-kit/ai-chat": ["packages/ai-chat/src/index.ts", "packages/ai-chat/dist/index.d.ts"],
      "@vibe-kit/ai-chat/*": ["packages/ai-chat/src/*", "packages/ai-chat/dist/*"],
      "@vibe-kit/auth": ["packages/auth/src/index.ts", "packages/auth/dist/index.d.ts"],
      "@vibe-kit/auth/*": ["packages/auth/src/*", "packages/auth/dist/*"]
    }
  },
  "references": [
    { "path": "./packages/logger" },
    { "path": "./packages/projects" },
    { "path": "./packages/mcp-client" },
    { "path": "./packages/taskmaster" },
    { "path": "./packages/ai-chat" },
    { "path": "./packages/auth" },
    { "path": "./packages/mcp-server" },
    { "path": "./packages/dashboard" },
    { "path": "./packages/sdk" },
    { "path": "./packages/cli" }
  ],
  "include": ["packages/*/src/**/*", "test/**/*"],
  "exclude": ["node_modules", "**/dist/**", "**/node_modules/**"]
}